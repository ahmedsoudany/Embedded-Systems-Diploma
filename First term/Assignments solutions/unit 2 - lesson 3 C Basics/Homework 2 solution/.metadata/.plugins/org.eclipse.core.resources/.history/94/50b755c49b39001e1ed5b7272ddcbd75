#include "stdio.h"

int main()
{

	float a , b ;
	char ch;
	printf("Enter operation either + or - or * or divide : ");
	fflush(stdout);
	scanf("%c",&ch);

	switch(ch)
	{
	case '+':

	printf("Enter two operands: ");
	fflush(stdout); fflush(stdin);
	scanf("%0.1f",&a);
	scanf("%0.1f",&b);

	printf("%0.1f + %0.1f = %0.1f",a,b,a+b);

	break;

	case '-':
		printf("Enter two operands: ");
		fflush(stdout);
		scanf("%0.1f %0.1f",&a,&b);

		printf("%0.1f ",a-b);

	break;

	case '*':
		printf("Enter two operands: ");
		fflush(stdout);
		scanf("%0.1f %0.1f",&a,&b);

		printf("%0.1f",a*b);

		break;

	case '/':
		printf("Enter two operands: ");
		fflush(stdout);
		scanf("%0.1f %0.1f",&a,&b);

		printf("%0.1f ",a/b);

		break;

	}

	return 0;
}
