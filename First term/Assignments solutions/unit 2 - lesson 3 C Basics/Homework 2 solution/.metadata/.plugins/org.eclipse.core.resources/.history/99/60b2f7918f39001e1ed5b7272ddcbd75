#include "stdio.h"

int main()
{
	float a , b , c;

	printf("Enter three numbers: ");
	fflush(stdout);
	scanf("%f %f %f",&a,&b,&c);

	if(a>b)
	{
		if(a>c)
			printf("Largest number = %f",a);
	}
	else if (c>b)
		printf("Largest number = %f",c);
	else
		printf("Largest number = %f",b);
}

