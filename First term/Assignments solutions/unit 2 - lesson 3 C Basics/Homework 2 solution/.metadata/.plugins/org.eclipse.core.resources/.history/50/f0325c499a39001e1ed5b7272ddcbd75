#include "stdio.h"

int main()
{

	int a , b ;
	char ch;
	printf("Enter operation either + or - or * or divide : ");
	fflush(stdout);
	scanf("%c",&ch);

	switch(ch)
	{
	case '+':
	printf("Enter two operands: ");
	fflush(stdout);fflush(stdin);
	scanf("%d",&a);
    scanf("%d",&b);
	printf("%d",a+b);

	break;

	case '-':
		printf("Enter two operands: ");
		fflush(stdout);
		scanf("%0.1f %0.1f",&a,&b);

		printf("%0.1f - %0.1f",a-b);

	break;

	case '*':
		printf("Enter two operands: ");
		fflush(stdout);
		scanf("%0.1f %0.1f",&a,&b);

		printf("%0.1f * %0.1f",a*b);

		break;

	case '/':
		printf("Enter two operands: ");
		fflush(stdout);
		scanf("%0.1f %0.1f",&a,&b);

		printf("%0.1f / %0.1f",a/b);

		break;

	}

	return 0;
}
