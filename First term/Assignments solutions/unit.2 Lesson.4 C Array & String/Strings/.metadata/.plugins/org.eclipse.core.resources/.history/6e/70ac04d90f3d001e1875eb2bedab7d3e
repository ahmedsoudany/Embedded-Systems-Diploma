#include "stdio.h"
#include "string.h"

int main()
{
	char str[30] , temp[30];
	int i , j;

	printf("Enter a string: ");
	fflush(stdout);fflush(stdin);
	gets(str);

	strcpy(temp,str);

	printf("%d\n",strlen(str));

	for(i = strlen(temp) - 1  , j = 0 ; i >= j ; --i , j++)
	{
		str[j] = temp [i] ;
	}

	printf("Reverse string is: %s",str);
}
