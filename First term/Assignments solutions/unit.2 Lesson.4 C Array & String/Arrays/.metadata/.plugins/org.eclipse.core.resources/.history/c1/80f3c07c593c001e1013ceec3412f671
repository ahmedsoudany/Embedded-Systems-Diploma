#include "stdio.h"

int main()
{
	float arr1[2][2] , arr2[2][2], sum = 0;
	int r , c;

	for(r = 0 ; r < sizeof(arr) ;r++)
	{
		printf("EANTER THE ELEMENTS OF 1st matrix");
		for(c = 0 ; c < sizeof(arr1);c++)
		{
			printf("Enter a%d%d: ",r,c)
			scanf("%f",&arr1[r][c])
		}
	}

	for(r = 0 ; r < sizeof(arr) ;r++)
		{
			printf("EANTER THE ELEMENTS OF 2nd Matrix");
			for(c = 0 ; c < sizeof(arr2);c++)
			{
				printf("Enter b%d%d: ",r,c)
				scanf("%f",&arr2[r][c])
			}
		}

	for(r = 0 ; r < sizeof(arr) ;r++)
	{
		for(c = 0 ; c < sizeof(arr);c++)
			sum = arr1[r][c] + arr2[r][c];
		printf("%0.2f\t",sum);

	}
	printf("\n");
}
